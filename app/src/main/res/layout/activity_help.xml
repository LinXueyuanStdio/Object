<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/activity_page" >

	<pub.object.system.ThemeSystem.widgets.TintRelativeLayout
		style="@style/topbar_bg_orange"
		android:id="@+id/toolbar"
		android:background="@color/theme_color_primary"
		android:minHeight="?attr/actionBarSize">

		<ImageView style="@style/topbar_return_img" />

		<TextView
			style="@style/topbar_title"
			android:layout_centerHorizontal="true"
			android:textColor="@color/white"
			android:text="发布帮助" />
	</pub.object.system.ThemeSystem.widgets.TintRelativeLayout>

	<LinearLayout
		style="@style/ll_vertical_match_wrap"
		android:layout_height="140dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/help_background_pink" >

		<LinearLayout
			style="@style/ll_horizontal_match_wrap"
			android:layout_weight="1"
			android:paddingLeft="20dp" >

			<RelativeLayout
				style="@style/ll_horizontal_match_wrap"
				android:padding="4dp" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:paddingLeft="35dp"
					android:id="@+id/tv_help_publish_name_raw"
					android:text="帮助者:" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/tv_help_publish_name_raw"
					android:id="@+id/tv_help_publish_name"
					android:layout_centerVertical="true"
					android:text="叫我小酷酷" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:paddingRight="20dp"
					android:id="@+id/tv_help_publish_phone"

					android:text="150****1111" />
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
			style="@style/ll_horizontal_match_wrap"
			android:layout_weight="1"
			android:id="@+id/ll_help_publish_place"

			android:paddingLeft="20dp" >

			<RelativeLayout
				style="@style/ll_horizontal_match_wrap"
				android:padding="4dp" >

				<ImageView
					style="@style/icon_help_default"
					android:layout_centerVertical="true"
					android:src="@drawable/help_item_position" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:paddingLeft="35dp"
					android:id="@+id/tv_help_publish_place_raw"
					android:text="帮助地点(附近)：" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/tv_help_publish_place_raw"
					android:id="@+id/tv_help_publish_place"
					android:layout_centerVertical="true"
					android:text="荔园11" />

				<ImageView
					style="@style/icon_help_default"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:paddingRight="10dp"
					android:src="@drawable/help_arrow_right" />
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
			style="@style/ll_horizontal_match_wrap"
			android:layout_weight="1"
			android:id="@+id/ll_help_publish_type"
			android:paddingLeft="20dp" >

			<RelativeLayout
				style="@style/ll_horizontal_match_wrap"
				android:padding="4dp" >

				<ImageView
					style="@style/icon_help_default"
					android:layout_centerVertical="true"
					android:src="@drawable/help_item_type" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:paddingLeft="35dp"
					android:id="@+id/tv_help_publish_type_raw"
					android:text="帮助类型(加急｜普通)：" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/tv_help_publish_type_raw"
					android:id="@+id/tv_help_publish_type"
					android:layout_centerVertical="true"
					android:text="普通" />

				<ImageView
					style="@style/icon_help_default"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:paddingRight="10dp"
					android:src="@drawable/help_arrow_right" />
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
			style="@style/ll_horizontal_match_wrap"
			android:layout_weight="1"
			android:id="@+id/ll_help_publish_money"

			android:paddingLeft="20dp" >

			<RelativeLayout
				style="@style/ll_horizontal_match_wrap"
				android:padding="4dp" >

				<ImageView
					style="@style/icon_help_default"
					android:layout_centerVertical="true"
					android:src="@drawable/help_item_money" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:paddingLeft="35dp"
					android:id="@+id/tv_help_publish_money_raw"
					android:text="帮助金额（单位：元）：" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/tv_help_publish_money_raw"
					android:id="@+id/tv_help_publish_money"
					android:layout_centerVertical="true"

					android:text="1" />

				<ImageView
					style="@style/icon_help_default"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:paddingRight="10dp"
					android:src="@drawable/help_arrow_right" />
			</RelativeLayout>
		</LinearLayout>

		<View style="@style/divider_horizontal_1px" />
	</LinearLayout>

	<View style="@style/divider_horizontal_1px" />

	<LinearLayout
		style="@style/ll_vertical_match_wrap"
		android:layout_height="200dp"
		android:background="@drawable/help_background_rectangle_rounded" >

		<EditText
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:autoText="true"
			android:id="@+id/et_help_publish_message"
			android:background="@drawable/help_background_rectangle_rounded"
			android:hint="说点什么。。。"
			android:inputType="textMultiLine"
			android:lines="4"
			android:padding="5dp"
			android:scrollbars="vertical" />

		<ImageView
			android:layout_width="120dp"
			android:layout_height="80dp"
			android:id="@+id/iv_help_publish_photo"
			android:src="@drawable/help_photo" />
	</LinearLayout>

	<View style="@style/divider_horizontal_1px" />

	<LinearLayout
		style="@style/ll_vertical_match_wrap"
		android:layout_height="70dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/help_background_pink" >

		<View style="@style/divider_horizontal_1px" />

		<LinearLayout
			style="@style/ll_horizontal_match_wrap"
			android:layout_weight="1"
			android:id="@+id/ll_help_publish_setting"

			android:paddingLeft="20dp" >

			<RelativeLayout
				style="@style/ll_horizontal_match_wrap"
				android:padding="4dp" >

				<ImageView
					style="@style/icon_help_default"
					android:layout_centerVertical="true"
					android:src="@drawable/help_item_money" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:paddingLeft="35dp"
					android:id="@+id/tv_help_publish_setting"

					android:text="个性设置" />

				<ImageView
					style="@style/icon_help_default"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:paddingRight="10dp"
					android:src="@drawable/help_arrow_right" />
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
			style="@style/ll_horizontal_match_wrap"
			android:layout_weight="1"
			android:id="@+id/ll_help_publish_time"

			android:paddingLeft="20dp" >

			<RelativeLayout
				style="@style/ll_horizontal_match_wrap"
				android:padding="4dp" >

				<ImageView
					style="@style/icon_help_default"
					android:layout_centerVertical="true"
					android:src="@drawable/help_item_money" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true"
					android:paddingLeft="35dp"
					android:id="@+id/tv_help_publish_time_raw"
					android:text="帮助时间(附近):" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@+id/tv_help_publish_time_raw"
					android:id="@+id/tv_help_publish_time"
					android:text="12:00" />

				<ImageView
					style="@style/icon_help_default"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:paddingRight="10dp"
					android:src="@drawable/help_arrow_right" />
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>

	<View style="@style/divider_horizontal_1px" />

	<RelativeLayout
		style="@style/ll_horizontal_match_match"
		android:layout_marginTop="20dp"
		android:background="@drawable/help_background_pink" >

		<View style="@style/divider_horizontal_1px" />

		<pub.object.system.ThemeSystem.widgets.TintButton
			style="@style/btn_bottom"
			android:layout_width="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:id="@+id/btn_help_publish_publish"
			android:text="发表" />
	</RelativeLayout>

</LinearLayout>